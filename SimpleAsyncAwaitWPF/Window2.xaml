<Window x:Class="SimpleAsyncAwaitWPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleAsyncAwaitWPF"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <StackPanel>
        <Label Content="Enter text to submit"/>
        <TextBox x:Name="textblockEdit" Text="" Margin="5"/>
        <Button Content="Perform task" HorizontalAlignment="Left" Margin="5" Click="Button_Click_1"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="5" Click="Button_Click"/>
    </StackPanel>
</Window>
